<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgourd"
    tools:context="com.power.customizingthecloud.activity.mine.CustomerCenterActivity">
    <include layout="@layout/item_title_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/kf_bg_iv"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:id="@+id/shsq_ll"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginRight="5dp">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/kf_shouhou_iv" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="售后申请"
                            android:textColor="@color/text_black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="退货/退款/补发"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/xgdz_ll"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/kf_dizhi_iv" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="修改地址"
                            android:textColor="@color/text_black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="地址修改/编辑"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/zhaq_ll"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/kf_anquan_iv" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="账号安全"
                            android:textColor="@color/text_black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="修改密码/手机号"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/changjian_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/changjian_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="12dp"
                            android:text="常见问题"
                            android:textColor="@color/green"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/backgourd"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/indicator_changjian"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/green"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/shouhou_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/shouhou_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="12dp"
                            android:text="售后问题"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/backgourd"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/indicator_shouhou"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/renyang_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/renyang_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="12dp"
                            android:text="认养问题"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/backgourd"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/indicator_renyang"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wuliu_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/wuliu_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="12dp"
                            android:layout_centerInParent="true"
                            android:paddingBottom="12dp"
                            android:text="物流问题"
                            android:textSize="16sp"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/backgourd"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/indicator_wuliu"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/cnxw_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kf_wenti_iv"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="猜你想问"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/backgourd"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:id="@+id/zxkf_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kf_call_iv"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询客服"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/backgourd"/>
                <LinearLayout
                    android:id="@+id/pjfk_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kf_fankui_iv"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评价反馈"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/text_black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
