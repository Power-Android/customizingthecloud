<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgourd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.power.customizingthecloud.view.CircleImageView
            android:id="@+id/item_face_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/face"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="无敌小豆豆"
            android:textColor="@color/text_black"
            android:layout_toRightOf="@+id/item_face_iv"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_gongxian_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贡献：￥100.00"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</LinearLayout>