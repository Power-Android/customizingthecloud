<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgourd"
    tools:context="com.power.customizingthecloud.activity.mine.TixianThreeActivity">
    <include layout="@layout/item_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到账银行卡"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/card_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="请选择"
            android:textColor="@color/text_black"
            android:drawableRight="@drawable/mine_go_iv"
            android:drawablePadding="5dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="15dp">
        <TextView
            android:id="@+id/view_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/view_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@+id/view_01"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/money_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_below="@+id/view_01"
            android:hint=""
            android:layout_toRightOf="@+id/view_02"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tixian_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_green_button"
        android:padding="10dp"
        android:text="提现"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"/>
</LinearLayout>
