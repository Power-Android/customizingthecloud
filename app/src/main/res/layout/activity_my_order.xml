<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgourd"
    tools:context="com.power.customizingthecloud.activity.mine.MyOrderActivity">
    <include layout="@layout/item_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/quanbu_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/quanbu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="全部"
                    android:textColor="@color/green"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_quanbu"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/daifukuan_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/daifukuan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="待付款"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_daifukuan"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/daifahuo_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/daifahuo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="待发货"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_daifahuo"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/daishouhuo_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/daishouhuo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="待收货"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_daishouhuo"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/daipingjia_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/daipingjia_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:layout_centerInParent="true"
                android:paddingBottom="12dp"
                android:text="待评价"
                android:textColor="@color/gray"
                android:textSize="16sp"/>
            <View
                android:id="@+id/indicator_daipingjia"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
