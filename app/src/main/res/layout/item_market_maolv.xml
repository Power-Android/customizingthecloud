<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_face_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/face"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="养殖成本：￥20000.00"
        android:textColor="@color/text_black"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认养收益率：12%"
        android:textColor="@color/text_black"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/item_shouyi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="销售收益：￥10.00"
        android:textColor="@color/text_black"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_below="@+id/item_money_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/backgourd"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/item_face_iv"/>
</RelativeLayout>