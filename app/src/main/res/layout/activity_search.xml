<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgourd"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title"
        android:padding="10dp">
        <!--注意这里一定还要设置singLine=“true”，不然回车还是换行的功能。-->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@drawable/title_back_iv"
        />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_search"
            android:drawableLeft="@drawable/icon_search2"
            android:drawablePadding="10dp"
            android:hint="请输入要搜索的商品"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="热门标签"
            android:textColor="@color/text_black"
            android:textSize="15sp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/backgourd"
        />
        <com.power.customizingthecloud.view.FluidLayout
            android:id="@+id/liushiview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
        />
    </LinearLayout>
</LinearLayout>
