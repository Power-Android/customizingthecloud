<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_my_share"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.power.customizingthecloud.fragment.home.top.MyShareActivity">
    <include layout="@layout/item_title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_share_bg">
        <com.power.customizingthecloud.view.CircleImageView
            android:id="@+id/face_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/face"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"/>
        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="我也领养一只"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_red_button1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

</LinearLayout>
