<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgourd"
    tools:context="com.power.customizingthecloud.activity.mine.MyMoneyRecordActivity">
    <include layout="@layout/item_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/quanbu_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/quanbu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="全部"
                    android:textColor="@color/green"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_quanbu"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shouyi_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shouyi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="收益"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_shouyi"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tixian_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tixian_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="提现"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_tixian"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/yongjin_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/yongjin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:layout_centerInParent="true"
                    android:paddingBottom="12dp"
                    android:text="佣金"
                    android:textColor="@color/gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/backgourd"/>
            </RelativeLayout>

            <View
                android:id="@+id/indicator_yongjin"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"/>
</LinearLayout>
