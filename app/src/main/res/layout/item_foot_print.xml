<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.power.customizingthecloud.view.EasySwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/content_rl"
        app:rightMenuView="@+id/shachu_tv">
        <RelativeLayout
            android:id="@+id/content_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp">
            <ImageView
                android:id="@+id/item_img_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/face"/>
            <TextView
                android:id="@+id/item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_img_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="驴奶粉"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/item_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥50"
                android:textColor="@color/red2"
                android:layout_toRightOf="@+id/item_img_iv"
                android:layout_below="@id/item_name_tv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/斤"
                android:textColor="@color/text_black"
                android:layout_toRightOf="@+id/item_money_tv"
                android:layout_below="@+id/item_name_tv"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/item_xiaoliang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月销量：100斤"
                android:textColor="@color/text_black"
                android:layout_below="@+id/item_money_tv"
                android:layout_toRightOf="@+id/item_img_iv"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/item_pingjia_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计评价：100"
                android:textColor="@color/text_black"
                android:layout_below="@+id/item_money_tv"
                android:layout_toRightOf="@+id/item_xiaoliang_tv"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backgourd"
                android:layout_below="@+id/item_img_iv"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/shachu_tv"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删 除"
            android:textColor="@color/white"
            android:background="@color/red2"/>
    </com.power.customizingthecloud.view.EasySwipeMenuLayout>

</LinearLayout>